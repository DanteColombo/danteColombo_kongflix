<!DOCTYPE html>
<html>
  <%- include('../partials/head', {title: 'productAdd'})%>

  <body>
    <%- include('../partials/header')%>
    
    <main>
        <h1>Agregar Pelicula</h1>    
        <section class="section_add">
            <div>
                <form action="/productAdd" method="POST"  enctype="multipart/form-data">

                    
                    <input type="text" name="titulo" class="titulo" id="titulo" placeholder="titulo" required>

                    <select name="genero" id="genero" required>
                      <option value="" hidden selected >Elige un genero</option>
                      <% generos.forEach(genero => { %>
                        <option value="<%= genero %>"  ><%= genero %></option>
                      <% }) %>
                    </select>

                    <select name="category" id="category" required>
                      <option value="" hidden selected >Elige una opcion</option>
                      <% categories.forEach(category => { %>
                        <option value="<%= category %>"  ><%= category %></option>
                      <% }) %>
                    </select>

                    <input type="number" name="anio" class="anio" id="anio" placeholder="año" required>

                    <input type="number" name="peso" class="peso" id="peso" placeholder="tamaño" required>

                    <select name="calidad" id="calidad" required>
                      <option value="" hidden selected>Elige la calidad</option>
                      <% calidades.forEach(calidad => { %>
                        <option value="<%= calidad %>" ><%= calidad %></option>
                      <% }) %>
                    </select>

                    <select name="resolucion" id="resolucion" required>
                      <option value="" hidden selected>Elige la resolución</option>
                      <% resoluciones.forEach(resolucion => { %>
                        <option value="<%= resolucion %>" ><%= resolucion %></option>
                      <% }) %>
                    </select>

                    <select name="idiomaAud" id="idiomaAud" required>
                      <option value="" hidden selected>Elige el Idioma (aud)</option>
                      <% idioma.forEach(idiomaAud => { %>
                        <option value="<%= idiomaAud %>"  ><%= idiomaAud %></option>
                      <% }) %>
                    </select>

                    <select name="idiomaSub" id="idiomaSub">
                      <option value="" hidden selected>Elige el Idioma (sub)</option>
                      <% idioma.forEach(idiomaSub => { %>
                        <option value="<%= idiomaSub %>"  ><%= idiomaSub %></option>
                      <% }) %>
                    </select>

                    <select name="formato" id="formato">
                      <option value="" hidden selected>Elige el formato</option>
                      <% formatos.forEach(formato => { %>
                        <option value="<%= formato %>" ><%= formato %></option>
                      <% }) %>
                    </select>

                    <input type="text" name="link" class="link"  id="link" placeholder="link" required>

                    <input type="file" class="fotoPelicula" id="fotoPelicula" name="fotoPelicula" accept=".jpg,.jpeg,.png" placeholder="Ingrese la foto de la pelicula">
                    
                    <textarea class="descripcion" name="descripcion" id="descripcion" rows="5" cols="50" placeholder="sinopsis" required></textarea>

                    <button type="submit">Subir Pelicula</button>
                </form>
            </div>
            
            
        </section>
    </main>

    
</body>